@model EmployeeMS.Data.Entities.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1>Employee Details</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Department.Name)</dd>

        <dt class="col-sm-2">Is Still Working?</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsStillWorking)</dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedBy.UserName)</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
